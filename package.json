{
  "name": "clinicalgoto",
  "version": "1.0.0",
  "description": "ClinicalGoTo - Your Gateway to Clinical Research. Connect patients with clinical trial opportunities from ClinicalTrials.gov with an intuitive search interface and streamlined registration process.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run build:css && npm run build:js",
    "build:css": "echo 'CSS already optimized for production'",
    "build:js": "echo 'JavaScript already optimized for production'",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docker:build": "docker build -t clinicalgoto .",
    "docker:run": "docker run -p 5555:5555 --env-file .env clinicalgoto",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "health": "curl -f http://localhost:5555/health || exit 1",
    "validate": "npm run lint && npm run test"
  },
  "keywords": [
    "clinical-trials",
    "healthcare",
    "medical-research",
    "patient-recruitment",
    "clinicaltrials.gov",
    "medical-studies",
    "patient-portal",
    "health-research",
    "clinical-research",
    "landing-page",
    "node.js",
    "express",
    "docker",
    "responsive-design",
    "accessibility"
  ],
  "author": {
    "name": "ClinicalGoTo Team",
    "email": "info@clinicalgoto.com",
    "url": "https://clinicalgoto.com"
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "connect-sqlite3": "^0.9.16",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.6",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clinicalgoto/clinicalgoto.git"
  },
  "bugs": {
    "url": "https://github.com/clinicalgoto/clinicalgoto/issues"
  },
  "homepage": "https://clinicalgoto.com"
}
